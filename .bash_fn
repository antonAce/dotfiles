function tailwind_react_app() {
    npx create-react-app $1 --template typescript
    cd $1

    npm install -D tailwindcss postcss autoprefixer
    npx tailwindcss init -p

    cat << EOF > tailwind.config.js
module.exports = {
  content: [
    "./src/**/*.{js,jsx,ts,tsx}",
  ],
  theme: {
    extend: {},
  },
  plugins: [],
}
EOF

    cat << EOF > src/index.css
@tailwind base;
@tailwind components;
@tailwind utilities;
EOF
}
